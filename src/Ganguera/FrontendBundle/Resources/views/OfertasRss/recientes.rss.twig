<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>Ofertas recientes {{ prov }}</title>
        <link>{{ url('frontend_ver_ofertas_prov', { 'prov': slug_act, '_format': 'html' }) }}</link>
        <description>Las ofertas mas recientes en {{ prov }}</description>
        <language>{{ app.request.locale }}</language>
        <pubDate>{{ 'now'|date('r') }}</pubDate>
        <lastBuildDate>{{ 'now'|date('r') }}</lastBuildDate>
        <generator>Ofertas Ganguera</generator>
        <atom:link href="{{ url('frontend_ofertas_recientes_prov', { 'prov': slug_act, '_format': 'rss' }) }}" 
                   rel="self" type="application/rss+xml" />
        {% for oferta in ofertas %}
            <item>
                <title>{{ oferta.getTitulo() }}</title>
                <link>{{ url('frontend_ver_ofertas_prov', { 'prov': slug_act, '_format': 'html' }) }}</link>
                <description>{{ oferta.description }}</description>
                <pubStart>{{ oferta.datestart | date('r') }}</pubStart>
                <pubFinish>{{ oferta.datefinish | date('r') }}</pubFinish>
                <guid>{{ url('frontend_ver_oferta', {'id_oferta': oferta.id}) }}</guid>
            </item>
        {% endfor %}
    </channel>
</rss>