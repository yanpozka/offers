{% extends '::backend.html.twig' %}

{% block contenido -%}
    <h1>Usuario edit</h1>

    <form action="{{ path('backend_user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {#{ form_widget(edit_form) }#}
        {% include 'FrontendBundle:Usuario:campos_registro_usuario.html.twig' with {'formulario': edit_form} only %}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('backend_user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('backend_user_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
