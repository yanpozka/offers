{% extends '::backend.html.twig' %}

{% block contenido -%}
<a class="btn btn-inverse" href="{{ path('oferta') }}"><< Regresar al listado</a>
<fieldset>
    <legend>Detalles de Oferta {{ entity.id }}</legend>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ entity.titulo }}</td>
            </tr>
            <tr>
                <th>Fecha creaci&oacute;n</th>
                <td>{{ entity.datecreation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fecha inicio</th>
                <td>{{ entity.datestart|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fecha fin</th>
                <td>{{ entity.datefinish|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Costo</th>
                <td>{{ entity.cost }}</td>
            </tr>
            <tr>
                <th>Descripci&oacute;n</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Im&aacute;genes</th>
                <td>{% include 'FrontendBundle:Ofertas:pics_oferta.html.twig' with {'oferta': entity} %}</td>
            </tr>
        </tbody>
    </table>
</fieldset>

<div class="row-fluid">
    <div class="span5">
        <a class="btn btn-info" href="{{ path('oferta_edit', { 'id': entity.id }) }}">Editar</a>
        </div>
    <div class="span5">
        <form action="{{ path('oferta_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-warning">x Eliminar</button>
        </form>
    </div>
</div>
{% endblock %}
