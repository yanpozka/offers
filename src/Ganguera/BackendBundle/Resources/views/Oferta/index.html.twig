{% extends '::backend.html.twig' %}

{% block contenido -%}
    <h1>Listado de Ofertas</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>T&iacute;tulo</th>
                <th>Creada</th>
                <th>Inicia</th>
                <th>Termina</th>
                <th>Costo</th>
                <th>Descripci&oacute;n</th>
                <th>Provincia</th>
                <th colspan="2">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('oferta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titulo }}</td>
                <td>{% if entity.datecreation %}{{ entity.datecreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datestart %}{{ entity.datestart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datefinish %}{{ entity.datefinish|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.cost }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.provincia }}</td>
                <td>
                    <!--<ul style="list-style: none">
                        <li>-->
                            <a class="btn btn-mini" href="{{ path('oferta_show', { 'id': entity.id }) }}">Ver</a>
                            
                            
                         <!--</li>
                        <li>
                            
                        </li>
                    </ul>-->
                </td>
                <td>
                    <a class="btn btn-mini btn-inverse" href="{{ path('oferta_edit', { 'id': entity.id }) }}">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
